# top-most file
root = true

## Generic rules
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.bash,*.sh,*.zsh}]
tab_width = 2

[{*.yml,*.yaml}]
tab_width = 2

[*.py]
indent_size = 4

# JetBrains Properties
ij_python_optimize_imports_sort_imports = true
